<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".activities.TestActivity">

    <EditText
        android:id="@+id/edt_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="code"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="name"
    />

    <EditText
        android:id="@+id/edt_id_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="id_grp"
        android:inputType="textPersonName" />

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:id="@+id/Test_number_picker4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:picker_corner_radius="10"
        app:pickers_background_color="@color/colorPrimary"
        app:decimal_number= "0"
        app:swipe_enabled="false"
        app:value_background_color="@color/colorAccent"
        app:value_text_color="@android:color/white"/>


    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/BtnTest1"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:text="BtnTest1"
        android:textColor="@color/White"
        android:textSize="16dp"
        app:buttonCornerRadius="50dp"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonGradientStartColor="@color/colorPrimary" />
    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/BtnTest2"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:text="testNetwork"
        android:textColor="@color/White"
        android:textSize="16dp"
        app:buttonCornerRadius="50dp"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonGradientStartColor="@color/colorPrimary" />
    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/BtnTest3"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:text="TestInternet"
        android:textColor="@color/White"
        android:textSize="16dp"
        app:buttonCornerRadius="50dp"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonGradientStartColor="@color/colorPrimary" />


    <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented2"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
        android:id="@+id/button21"
        style="@style/RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Onere" />

        <RadioButton
            android:id="@+id/button2"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Two" />

        <RadioButton
            android:id="@+id/button23"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="55" />

        <RadioButton
            android:id="@+id/button22"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="Two" />
    </info.hoang8f.android.segmented.SegmentedGroup>




    <com.github.fafaldo.fabtoolbar.widget.FABToolbarLayout
        android:id="@+id/fabtoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:showDuration="600"
        app:hideDuration="200"
        app:horizontalMargin="30dp"
        app:verticalMargin="30dp"
        app:fadeInFraction="0.2"
        app:fabId="@+id/fabtoolbar_fab"
        app:containerId="@+id/fabtoolbar_container"
        app:fabToolbarId="@+id/fabtoolbar_toolbar">



        <RelativeLayout
            android:id="@+id/fabtoolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabtoolbar_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:src="@drawable/abc_ic_menu_share_mtrl_alpha"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fabtoolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgBtn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ImgBtn1_Click"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_delete"/>
            <ImageView
                android:id="@+id/ImgBtn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ImgBtn2_Click"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_add"/>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/ImgBtn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="ImgBtn2_Click"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_sync"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="بازخانی"
                        android:textSize="@dimen/H2"
                        android:textColor="@color/Black"
                        android:textAlignment="center"
                        />
                </android.support.v7.widget.LinearLayoutCompat>

        </LinearLayout>

    </com.github.fafaldo.fabtoolbar.widget.FABToolbarLayout>


</LinearLayout>